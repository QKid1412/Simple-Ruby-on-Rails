<style>
    .largebutton:hover {
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.1s;
	    	background-color: #e1d6a9;
            color: black;
            border: 2px solid #ae170f;
	    	box-shadow: 0 2px 6px 0 rgba(0,0,0,0.24),0 0px 0px 0 rgba(0,0,0,0.19);
		}
		.largebutton{
			font-size: 11pt;
			color: #ffd3dd;
			border: none;
			border-radius: 5px;
			vertical-align: center;
			height: 40px;
			width: 100px;
			margin-top: 30px;
			margin-left: 2%;
			margin-right: 5px;
			background-color: #b2191b;
			text-shadow: 1px 1px 1px #bcbcbc;
		}
</style>

<h1 style= "font-family: arial;"> Displaying Students </h1>

<%= link_to '<button class="largebutton" type="button">Go back to DB</button>'.html_safe, students_path %>
<div class = "container" style="  margin-top: 10%;
  margin-left: 10%;">
<% @std.each do |std| %>

  <div class = "box"
   style=
  "border: <%=std.gpa %>px solid <%= std.color %>;
  position: relative;
  padding: 0;
  top: 10px;
  float: left;
  margin: 10px;
  width: <%= std.weight%>px;
  height: <%= std.height%>px;
  ">
    <div id = "names" style= "color: <%=std.color%>;
               text-align:center; margin-top: 50%;"> 
    <%= std.name %> 
    <%= std.gpa %> 
    </div>
    
  </div>

<% end %>
</div>
     

